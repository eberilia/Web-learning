@model proj.Models.Quiz
@{
}

    <div class="text-center">

        <p>DZIAŁA QUIZ O ID:</p>
        @ViewData["ID"]

    <form asp-action="Stats">
        @{

            int j = 1;

            foreach (Question q in Model.Questions)
            {
                <p>@q.TextQuestion</p>


                string n = "q" + j;


                for (int i = 0; i < q.Answers.Count; i++)
                {
                    string id = n + "a" + (i + 1);

                <div class="custom-control custom-radio">
                    <input type="radio" class="custom-control-input" id=@id name=@n value="@q.Answers.ToList()[i].Key" required>
                    <label class="custom-control-label" for=@id>@q.Answers.ToList()[i].Key</label><br>
                </div>
                }

                j++;
            }

            <input type="submit" value="Koniec">

        }
    </form>


